<%- include ('../partials/header.ejs') %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Add new Arts</h1>
    <div style="width: 30%; margin: 25px auto">
      <form action="/arts/<%=art._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="art[name]"
            value="<%= art.name %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="art[aboutArtist]"
            value="<%= art.aboutArtist %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="art[image]"
            value="<%= art.image %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="art[description]"
            value="<%= art.description %>"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/arts">Go Back</a>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/darkmode-js@1.5.7/lib/darkmode-js.min.js"></script>
<script type="text/javascript" src="/stylesheet/index.js"></script>
<%- include ('../partials/footer.ejs') %>
